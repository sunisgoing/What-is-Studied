create table S
	(SNO CHAR(2) PRIMARY KEY,
     SNAME VARCHAR(10) UNIQUE NOT NULL,
     STATUS INT,
     CITY VARCHAR(10)
 );
 create table P
	(PNO CHAR(2) PRIMARY KEY,
     PNAME CHAR(3) NOT NULL,
     COLOR CHAR(1),
     WEIGHT INT
);
CREATE TABLE J
	(JNO CHAR(2) PRIMARY KEY,
	 JNAME VARCHAR(10),
     CITY VARCHAR(10)
);
CREATE TABLE SPJ
	(SNO CHAR(2),
	 PNO CHAR(2),
     JNO CHAR(2),
     QTY INT,
     PRIMARY KEY(SNO,PNO,JNO),
     FOREIGN KEY(SNO) REFERENCES S(SNO),
     FOREIGN KEY(PNO) REFERENCES P(PNO),
     FOREIGN KEY(JNO) REFERENCES J(JNO)
);
 LOAD DATA  LOCAL INFILE 'D:/1Documents/S.csv' 
 INTO TABLE S
 FIELDS TERMINATED BY','
 LINES TERMINATED BY'\n'
 ;
  LOAD DATA  LOCAL INFILE 'D:/1Documents/P.csv' 
 INTO TABLE P
 FIELDS TERMINATED BY','
 LINES TERMINATED BY'\n'
 ;
  LOAD DATA  LOCAL INFILE 'D:/1Documents/J.csv' 
 INTO TABLE J
 FIELDS TERMINATED BY','
 LINES TERMINATED BY'\n'
 ;
  LOAD DATA  LOCAL INFILE 'D:/1Documents/SPJ.csv' 
 INTO TABLE SPJ
 FIELDS TERMINATED BY','
 LINES TERMINATED BY'\n'
 ;
describe S;
describe P;
describe J;
describe SPJ;
SELECT * FROM S;
SELECT * FROM P;
SELECT * FROM J;
SELECT * FROM SPJ;
ALTER TABLE J
ADD `BEGIN` DATE DEFAULT(CURDATE()); 
ALTER TABLE P
DROP COLOR;
